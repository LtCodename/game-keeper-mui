// Special typescript project file, used by eslint only.
// This allows us to lint files outside of our defined project folder, but not have them compiled by TS at build time
{
  "extends": "./tsconfig.json",
  "include": [
    // repeated from base config's "include" setting
    "src",

    // these are the eslint-only inclusions
    ".eslintrc.js",
    "jest.config.js",
    "webpack.config.js"
  ]
}
